@model List<BookViewModel>
@{
    ViewData["Title"] = "List";
}
    <h3 class="mb-2">Управление книгами</h3>
<div class="mt-1 mb-1">
    <a class="btn btn-link" asp-action="Add">Добавить</a>
</div>
@if (Model.Count != 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Автор</th>
                    <th>Жанр</th>
                    <th>Статус</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            @book.Title
                        </td>
                        <td>
                            @book.Author
                        </td>
                        <td>
                            @book.Genre
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.CurrentStatus.Status)
                        </td>
                        <td>
                            <div class="input-group">
                                @if (book.CurrentStatus.Status != Status.Issued)
                                {
                                    <a asp-action="Issue" asp-controller="Library" asp-route-id="@book.Id" class="btn btn-outline-primary">Выдать</a>
                                }
                                else
                                {
                                    <form class="mr-1" asp-action="Take" asp-controller="Library" method="post">
                                        <input type="hidden" name="BookId" value="@book.Id" />
                                        <input class="btn btn-primary" type="submit" value="Вернуть" />
                                    </form>
                                }
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="BookId" value="@book.Id" />
                                    <input class="btn btn-outline-danger" type="submit" value="Удалить" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>Список пользователей пуст</p>
}