<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternetShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-md navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand mr-auto" asp-action="List" asp-controller="Library">На главную</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <p>@User.Identity.Name </p>
                            <p>@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimsIdentity.DefaultRoleClaimType).Value</p>
                            if (User.IsInRole("Admin"))
                            {
                                <a class="nav-link" asp-action="List" asp-controller="Users">Управление пользователями</a>
                            }
                            if (User.IsInRole("Librarian"))
                            {
                                <a class="nav-link" asp-action="List" asp-controller="Books">Управление книгами</a>
                            }

                            <form class="form-inline" method="post" asp-action="LogOut" asp-controller="Account">
                                <input class="btn btn-outline-danger" type="submit" value="Выход" />
                            </form>
                        }
                        else
                        {
                            <a class="nav-link" asp-action="LogIn" asp-controller="Account">Вход</a>
                        }
                    </div>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>