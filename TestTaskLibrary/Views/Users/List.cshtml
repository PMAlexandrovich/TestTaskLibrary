@model List<UserViewModel>
@{
    ViewData["Title"] = "List";
}

<div class="mt-1 mb-1">
    <a class="btn btn-link" asp-action="Add">Добавить</a>
</div>
@if (Model.Count != 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Email</th>
                    <th>Пароль</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.FullName
                        </td>
                        <td>
                            @user.Email
                        </td>
                        <td>
                            @user.Password
                        </td>
                        <td>
                            <div class="input-group">
                                <form class="mr-1" asp-action="ChangePassword" asp-controller="Users" method="get">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <input class="btn btn-primary" type="submit" value="Изменить пароль" />
                                </form>
                                <form asp-action="Delete" asp-controller="Users" method="post">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <input class="btn btn-danger" type="submit" value="Удалить" />
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>Список пользователей пуст</p>
}
